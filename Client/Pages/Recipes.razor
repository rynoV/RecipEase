@page "/Recipes"

<h1>Recipes</h1>

<form class="my-3">
    <input class="form-control w-25 mb-1" type="search" placeholder="Search recipes" aria-label="Search">
    <div class="mb-1">
        <b>Filter by category:</b><br/>
        @foreach (var category in new[] {"Breakfast", "Lunch", "Dinner"})
        {
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="@category" value="@category">
                <label class="form-check-label" for="@category">@category</label>
            </div>
        }
    </div>
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>

<div class="list-group">
    @for (var i = 0; i < 8; i++)
    {
        <RecipeCard Id=@i.ToString()></RecipeCard>
    }
</div>

